<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.app02.dao.UserMapper">
    <select id="query" resultType="com.briup.apps.app02.bean.User">
        select * from sms_user
        <where>
            <if test="realname != null">
                realname like concat('%',#{realname},'%')
            </if>
            <if test="telephone != null">
                AND telephone like concat('%',#{telephone},'%')
            </if>
            <if test="gender != null">
                AND gender = #{gender}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>

    </select>
    <select id="selectAll" resultType="com.briup.apps.app02.bean.User">
    select * from sms_user
  </select>
    <select id="selectByPrimaryKey" resultType="com.briup.apps.app02.bean.User">
    select * from sms_user where id=#{id}
  </select>
    <insert id="insert" parameterType="com.briup.apps.app02.bean.User">
       insert into sms_user(id,realname,telephone,password,gender,type,status)
       values  (#{id},#{realname} ,#{telephone} ,#{password} ,#{gender} ,#{type} ,#{status} )
   </insert>
    <update id="update" parameterType="com.briup.apps.app02.bean.User">
        update sms_user
        <set>
            <if test="realname != null">realname=#{realname},</if>
            <if test="telephone != null">telephone=#{telephone},</if>
            <if test="password != null">password=#{password},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="type != null">type=#{type},</if>
            <if test="status != null">status=#{status}</if>
        </set>
        where id = #{id}

    </update>
    <delete id="deleteByPrimaryKey" parameterType="com.briup.apps.app02.bean.User">
        delete from sms_user where id=#{id}
    </delete>

</mapper>